{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      // app path
      "@app/*": ["src/app/*"],
      "@app": ["src/app"],

      /// module path
      "@admin/*": ["src/admin/*"],
      "@admin": ["src/admin"],
      "@customer": ["src/customer"],
      "@customer/*": ["src/customer/*"],
      "@product/*": ["src/product/*"],
      "@product": ["src/product"],
      "@employee": ["src/employee"],
      "@employee/*": ["src/employee/*"],

      // shared module paths
      "@prisma/*": ["src/shared/prisma/*"],
      "@prisma": ["src/shared/prisma"],
      "@cloudinary": ["src/shared/cloudinary"],
      "@cloudinary/*": ["src/shared/cloudinary/*"],
      "@casl": ["src/shared/casl"],
      "@casl/*": ["src/shared/casl/*"],

      /// shared paths
      "@shared": ["src/shared"],
      "@shared/*": ["src/shared/*"],
    }
  }
}
